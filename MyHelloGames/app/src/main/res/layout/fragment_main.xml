<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/game1_image"
            android:contentDescription="@string/todo"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="80dp"/>
    <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/game4_image"
            android:contentDescription="@string/todo"
            android:scaleType="fitXY"
            android:layout_marginTop="90dp"
            app:layout_constraintTop_toBottomOf="@+id/game1_image"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/game2_image"
            android:contentDescription="@string/todo"
            android:scaleType="fitXY"
            app:layout_constraintStart_toEndOf="@+id/game1_image"
            android:layout_marginLeft="48dp" android:layout_marginStart="48dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="80dp"/>
    <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/game3_image"
            android:contentDescription="@string/todo"
            android:scaleType="fitXY"
            android:layout_marginTop="90dp"
            app:layout_constraintTop_toBottomOf="@+id/game2_image" app:layout_constraintStart_toEndOf="@+id/game4_image"
            android:layout_marginLeft="59dp" android:layout_marginStart="59dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>